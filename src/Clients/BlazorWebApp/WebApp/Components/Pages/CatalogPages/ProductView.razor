@rendermode InteractiveServer


<div class="product-grid">
    <div class="product-image">
        <a href="#">
            <img class="pic-1" src=@("http://localhost:5000/catalog/picture/"+ catalogItem.Id)>
        </a>
    </div>
    <div class="product-content">
        <h3 class="title">
            <a href="#">@catalogItem.Name</a>
        </h3>
        <div class="price">$@catalogItem.Price.ToString("N2")</div>
        <a class="add-to-cart" href="javascript:void(0)" onclick="@OnAddToCard">+ Add To Cart</a>
    </div>
</div>
@code {
    [Parameter]
    public CatalogItem catalogItem { get; set; }

    [Parameter]
    public EventCallback<CatalogItem> OnAddToCard { get; set; }



}
